<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_input" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textCursorDrawable">@color/green_900</item>
    </style>

    <style name="form_input" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:background">@drawable/input_only_borders</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>

    <style name="form_input_title" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header1" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header2" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_border" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="main_button" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">135dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="backgroundTint">@color/gray_100</item>
        <item name="drawableTint">@color/green_200</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="selected_button" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">135dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/green_200</item>
    </style>
</resources>